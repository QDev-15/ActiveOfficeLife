<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h4>Danh sách danh mục</h4>
        <div>
            <button class="btn btn-primary me-2" onclick="tagInstance.addNew()">➕ Add</button>
            <button class="btn btn-secondary" onclick="tagInstance.refreshData()">🔄 Refresh</button>
        </div>
    </div>


    @* new table *@
    <!-- Table -->
    <table id="tagTable" class="table table-bordered table-striped table-hover" style="width:100%"></table>

</div>








<div class="modal fade" id="tagModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <input type="hidden" id="tagIdModal" />
        <div class="modal-content">
            <!-- Header -->
            <div class="modal-header">
                <span id="tagIcon" class="me-2"></span>
                <h5 class="modal-title" id="tagTitle"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <!-- Body -->
            <div class="modal-body" id="tagBody">
                <!-- Nội dung sẽ được bind qua JS -->
            </div>

            <!-- Footer -->
            <div class="modal-footer" id="tagFooter">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <button type="button" onclick="tagInstance.update()" class="btn btn-primary btn-update">Cập nhật</button>
                <button type="button" onclick="tagInstance.save()" class="btn btn-primary btn-create">Lưu</button>
            </div>
        </div>
    </div>
</div>

<script type="module">
    tagInstance.initTable();
</script>