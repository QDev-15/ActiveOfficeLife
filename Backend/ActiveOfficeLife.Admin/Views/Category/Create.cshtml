@{
    Layout = null;
}
@model ActiveOfficeLife.Common.Models.CategoryModel

<div class="container mt-4">
    <h2>Create Category</h2>

    <form asp-action="Create" id="add_category" method="post">
        @* Name *@
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        @* Slug *@
        <div class="mb-3">
            <label asp-for="Slug" class="form-label"></label>
            <input asp-for="Slug" class="form-control" />
            <span asp-validation-for="Slug" class="text-danger"></span>
        </div>

        @* Description *@
        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        @* Parent Category *@
        <div class="mb-3">
            <label asp-for="ParentId" class="form-label">Parent Category</label>
            <select asp-for="ParentId" class="form-select" asp-items="ViewBag.ParentCategories">
                <option value="">-- None --</option>
            </select>
            <span asp-validation-for="ParentId" class="text-danger"></span>
        </div>

        @* SEO Metadata *@
        <div class="border p-3 rounded mb-3">
            <h5>SEO Metadata</h5>

            <div class="mb-3">
                <label for="SeoTitle" class="form-label">SEO Title</label>
                <input name="SeoMetadata.Title" id="SeoTitle" class="form-control" />
            </div>

            <div class="mb-3">
                <label for="SeoDescription" class="form-label">SEO Description</label>
                <textarea name="SeoMetadata.Description" id="SeoDescription" class="form-control" rows="2"></textarea>
            </div>

            <div class="mb-3">
                <label for="SeoKeywords" class="form-label">SEO Keywords</label>
                <input name="SeoMetadata.Keywords" id="SeoKeywords" class="form-control" />
            </div>
        </div>

        @* Buttons *@
        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>


